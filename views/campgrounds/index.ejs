<% layout('layouts/boilerplate') %>

<div class="col-8 offset-2">
  <div id="cluster-map"></div>

  <h1>All Campgrounds</h1>

  <form action="/campgrounds" method="GET" class="form-inline mb-3">
    <div class="row justify-content-center">
      <div class="col-8">
        <input
          type="text"
          name="search"
          class="form-control"
          placeholder="Search for a campground"
        />
      </div>
      <div class="col-1">
        <input type="submit" value="Search" class="btn btn-primary" />
      </div>
    </div>
  </form>

  <ul>
    <% for (let camp of campgrounds) {%>
    <div class="card mb-3">
      <div class="row">
        <div class="col-md-4">
          <img src="<%= camp.images[0].url %>" alt="" class="img-fluid" />
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title"><%= camp.title %></h5>
            <p class="card-text">
              <small class="text-muted"><%= camp.location %></small>
            </p>
            <a href="campgrounds/<%= camp._id %>" class="btn btn-primary">
              View <%= camp.title %>
            </a>
          </div>
        </div>
      </div>
    </div>
    <% } %>
  </ul>
</div>
<script>
  const mapToken = "<%-process.env.MAPBOX_TOKEN%>";
  const campgrounds = {features: <%- JSON.stringify(campgrounds) %>};
</script>

<script src="/javascript/clusterMap.js"></script>
